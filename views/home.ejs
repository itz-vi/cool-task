<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<style>
  .navbar {
    background-image: linear-gradient(to right, #00dbde 0%, #fc00ff 100%);

  }

  .side {
    background-image: linear-gradient(to right, #b889eb 0%, #3d7dec 100%);
    height: 716px;
    width: 250px;
    padding: 80px;
    font-size: larger;
    font-weight: 600;

  }

  .side,
  a {
    color: #000;
  }

  .container {
    background: rgb(34, 193, 195);
    background: linear-gradient(0deg, rgba(34, 193, 195, 1) 0%, rgba(56, 41, 194, 1) 100%);
    height: 716px;
    max-width: 1348px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    margin-top: -716px;
    margin-left: 250px;
    padding: 100px;

  }

  .card {
    background-image: url("/images/one.jpg");
    border-radius: 5px;
    padding: 20px;
    text-align: center;
    width: 800px;
    margin-top: -90px;
    box-shadow: 0 4px 8px 0 rgba(73, 131, 255, 0.771), 0 6px 20px 0 rgba(135, 99, 253, 0.19);

  }

  .profile-img {
    height: 40px;
    width: 40px;
    border-radius: 50%;
    cursor: pointer;
  }

  .modal {
    background-color: rgba(0, 0, 0, 0.575);
  }

  .modal-content {
    top: 40%;
    left: 50%;
    height: 150px;
    width: 100px;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: -30px;
    margin-left: -30px;
  }

  .modal-img {
    height: 200px;
    width: 200px;
    border-radius: 50%;
  }


  .profile-picture {
    width: 200px;
    height: 260px;
    margin: -90px auto 20px;
  }

  .profile-picture img {
    box-shadow: 0 4px 8px 1px rgba(73, 131, 255, 0.771), 0 6px 20px 0 rgba(135, 99, 253, 0.19);
    border: 5px solid lightblue;
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 20px;
  }
</style>

<body>
  <nav class="navbar">
    <a href="/home" class="navbar-brand">Navbar</a>
    <div>
      <a href="/login" class="btn btn-info">Logout</a>
      <!-- <img src="http://localhost:3000/uploads/<%= user.image %>" alt="img" id="profileImg" class="profile-img"> -->
    </div>
  </nav>

  <div id="profileModal" class="modal">
    <div class="modal-content">
      <img src="" id="img01" class="modal-img">
    </div>
  </div>

  <div class="side">
    <a href="/home">Home</a>
    <a href="/addtask">Addtask</a>
    <a href="/tasklist">Tasklist</a>
  </div>

  <div class="container">
    <div class="card">
      <div class="profile-picture">
        <img src="http://localhost:3000/uploads/<%= user.image %>" alt="Profile Picture">
      </div>
      <h2 class="name">
        <%= user.username %>
      </h2>
      <h4 class="username">
        <%= user.email %>
      </h4> <br>
      <h4 class="tagline">Keep going.</h4>
      <h3 class="description">Some Description</h3>
    </div>
  </div>


  <script>

    var modal = document.getElementById("profileModal")
    var img = document.getElementById("profileImg")
    var modalImg = document.getElementById("img01")

    img.onclick = function () {
      modal.style.display = "block";
      modalImg.src = this.src;
    }

    window.onclick = function (event) {
      if (event.target == modal) {
        modal.style.display = "none";
      }
    }


  </script>

</body>

</html>